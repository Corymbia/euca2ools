import euca2ools.controller

USAGE = """
Attaches a volume to an instance.

euca-attach-volume -i, --instance instance_id -d, --device device 
[-h, --help] [--version] [--debug] volume_id 

REQUIRED PARAMETERS

-i, --instance 			unique id of a running instance to attach the volume to.

-d, --device			local device name (inside the guest VM) to use.

volume_id			unique id for a volume to attach.

OPTIONAL PARAMETERS

"""

def main():
    volume_id = None
    instance_id = None
    device = None
    controller = euca2ools.controller.Controller('i:d:', ['instance=', 'device='],
                                                 cmd_usage=USAGE)
    for (name, value) in controller.opts:
        if name in ('-i', '--instance'):
            instance_id = value
        elif name in ('-d', '--device'):
            device = value
            
    if len(controller.args) >= 1:
        volume_id = controller.args[0]

    if volume_id and instance_id and device:
        controller.validate_volume_id(volume_id)
        controller.validate_instance_id(instance_id)
        euca_conn = controller.make_connection_cli()
        return_code = controller.make_request_cli(euca_conn,
                                                  'attach_volume',
                                                  volume_id=volume_id,
                                                  instance_id=instance_id,
                                                  device=device)
        if return_code:
            print 'VOLUME\t%s' % volume_id
    else:
        if not volume_id:
            msg = 'volume_id must be specified'
            controller.display_error_and_exit(msg)
        if not instance_id:
            msg = 'instance_id must be specified'
            controller.display_error_and_exit(msg)
        if not device:
            msg = 'device must be specified'
            controller.display_error_and_exit(msg)

if __name__ == '__main__':
    main()

