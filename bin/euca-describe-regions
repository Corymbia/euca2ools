import euca2ools.controller

USAGE = """
Shows information about regions. 

euca-describe-regions [-h, --help] [--version] [--debug]
[region1 region2...regionN]

OPTIONAL PARAMETERS
	
region1 region2...regionN	regions to describe. 

--filter                        A filter for limiting results.  Can be
                                specified multiple times.

"""

def display_regions(regions):
    for region in regions:
        region_string = '%s\t%s' % (region.name, region.endpoint)
        print 'REGION\t%s' % region_string

def main():
    controller = euca2ools.controller.Controller(long_opts=['filter='],
                                                 cmd_usage=USAGE)
    euca_conn = controller.make_connection_cli()
    regions = controller.make_request_cli(euca_conn,
                                          'get_all_regions',
                                          region_names=controller.args)
    display_regions(regions)

if __name__ == '__main__':
    main()

