import euca2ools.controller

USAGE = """
Adds or overwrites one or more tags for the specified resource or resources.

euca-create_tags --tag key[=value] [--tag key[=value]] resource_id [resource_id]

REQUIRED PARAMETERS
	
resource_id                     The resource you want to tag.
--tag key or --tag key=value    The key and optional value, separated by = sign.

OPTIONAL PARAMETERS

"""

def main():
    tags = {}

    controller = euca2ools.controller.Controller(None,
                                                 ['tag='],
                                                 cmd_usage=USAGE)

    for (name, value) in controller.opts:
        if name == '--tag':
            t = value.split('=')
            name = t[0]
            if len(t) == 1:
                value = ''
            else:
                value = t[1]
            tags[name] = value

    if len(controller.args) == 0:
        msg = 'at least one resource_id must be specified'
        controller.display_error_and_exit(msg)
    if len(tags.keys()) == 0:
        msg = 'at least one tag must be specified'
        controller.display_error_and_exit(msg)

    euca_conn = controller.make_connection_cli()
    status = controller.make_request_cli(euca_conn,
                                         'create_tags',
                                         resource_ids=controller.args,
                                         tags=tags)

    if status:
        for resource_id in controller.args:
            for name in tags:
                value = tags.get(name, '')
                s = 'TAG\t%s\t%s\t%s' % (resource_id, name, value)
                print s

if __name__ == '__main__':
    main()

