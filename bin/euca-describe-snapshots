import euca2ools.controller

USAGE = """
Shows information about snapshots.

euca-describe-snapshots [-o owner_id] [-r user_id] [snapshot1 snapshot2...snapshotN] 
[-h, --help] [--version] [--debug]

OPTIONAL PARAMETERS

-o					owner_id of the user who owns the snapshot.

-r					restorable by (user id of the user that can create volumes from the snapshot).
	
snapshot1 snapshot2...snapshotN		Snapshots to describe. 

"""

def display_snapshots(snapshots):
    for snapshot in snapshots:
        snapshot_string = '%s\t%s\t%s\t%s\t%s' % (snapshot.id,
                snapshot.volume_id, snapshot.status,
                snapshot.start_time, snapshot.progress)
        print 'SNAPSHOT\t%s' % snapshot_string

def main():
    owner = None
    restorable_by = None
    controller = euca2ools.controller.Controller('o:r:', cmd_usage=USAGE)
    for (name, value) in controller.opts:
        if name == "-o":
            owner = value
        elif name == "-r":
            restorable_by = value
    for snapshot_id in controller.args:
        controller.validate_snapshot_id(snapshot_id)
    euca_conn = controller.make_connection_cli()
    snapshots = controller.make_request_cli(euca_conn,
                                            'get_all_snapshots',
                                            owner=owner,
                                            restorable_by=restorable_by)
    display_snapshots(snapshots)

if __name__ == '__main__':
    main()

