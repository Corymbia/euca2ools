import euca2ools.controller

USAGE = """
Reboots specified instances.

euca-reboot-instances [-h, --help] [--version] [--debug]
[instance1... instanceN] 

OPTIONAL PARAMETERS
	
instance1... instanceN		instances to reboot. 

"""

def main():
    controller = euca2ools.controller.Controller(cmd_usage=USAGE)
    instance_ids = controller.args
    if len(instance_ids) > 0:
        for id in instance_ids:
            controller.validate_instance_id(id)
        euca_conn = controller.make_connection_cli()
        return_code = controller.make_request_cli(euca_conn,
                                                  'reboot_instances',
                                                  instances_id=instances_id)
        if return_code:
            for instance_id in instance_ids:
                print 'INSTANCE\t%s' % instance_id
    else:
        msg = 'instance id(s) must be specified.'
        controller.display_error_and_exit(msg)

if __name__ == '__main__':
    main()

