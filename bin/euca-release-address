import euca2ools.controller

USAGE = """
Releases a public IP address.

euca-release-address [-h, --help] [--version] [--debug] ip

REQUIRED PARAMETERS

ip				The public IP address to release.

OPTIONAL PARAMETERS

"""

def main():
    ip = None
    controller = euca2ools.controller.Controller(cmd_usage=USAGE)
    if len(controller.args) >= 1:
        ip = controller.args[0]

    if ip:
        controller.validate_address(ip)
        euca_conn = controller.make_connection_cli()
        return_code = controller.make_request_cli(euca_conn,
                                                  'release_address',
                                                  public_ip=ip)
        if return_code:
            print 'ADDRESS\t%s' % ip
    else:
        msg = 'ip address must be specified'
        controller.display_error_and_exit(msg)

if __name__ == '__main__':
    main()

